@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .row {
        background: white;
        border-radius: 30px;
    }

    h1 {
        margin-left: 20px;
    }
</style>
<section class="Form">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.FirstName"></label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.LastName"></label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Gender" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Gender"></label>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.DateOfBirth" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.DateOfBirth"></label>
                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.StreetAddress" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.StreetAddress"></label>
                        <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.AptNumber" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.AptNumber"></label>
                        <span asp-validation-for="Input.AptNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.UnitNumber" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.UnitNumber"></label>
                        <span asp-validation-for="Input.UnitNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Building" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Building"></label>
                        <span asp-validation-for="Input.Building" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.City" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.City"></label>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PostalCode" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.PostalCode"></label>
                        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Province" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Province"></label>
                        <span asp-validation-for="Input.Province" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
