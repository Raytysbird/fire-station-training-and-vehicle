@model fire_station_training_and_vehicle.Models.UserTask

@{
    ViewData["Title"] = "Complete Task";
}

<h1>Complete Task</h1>

<div class="row mx-4 my-4 no-gutters">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Course)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Course.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LastDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LastDate)
                    </dd>
                    <dd class="col-sm-10" hidden id="taskId">
                        @Html.DisplayFor(model => model.TaskId)
                    </dd>
                </dl>
            </div>

            <div class="row">
                @if  (ViewBag.IsComplete!=true)
                {
                    <form method="post" asp-action="TaskConsent">
                        <div class="form-group" hidden>
                            <input asp-for="TaskId" class="form-control" />
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="consent" name="consent" value="true">
                            <label for="consent" class="font-weight-bold">By checking this, I confirm that I have completed the task.</label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Confirm" class="btn btn2" />
                        </div>
                    </form>
                }
                else
                {
                    <p>This task was already completed by you. No action required, but you can review it if required. </p>
                }

                <a class="link-info" asp-action="Index" asp-controller="UserTask">Back to task list</a>

            </div>
        </div>

    </div>
    <div class="col-md-8">
        <div class="embed-responsive">
            <iframe width="1000" height="600" class="embed-responsive-item" src="https://www.youtube.com/embed/5e-fCu14FVU" allowfullscreen></iframe>
        </div>
    </div>

</div>
