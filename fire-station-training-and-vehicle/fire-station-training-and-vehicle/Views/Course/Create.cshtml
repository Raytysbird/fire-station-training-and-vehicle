@model fire_station_training_and_vehicle.Models.Course

@{
    ViewData["Title"] = "New Course";
}

<h1>Add New Courses</h1>

<div class="row mx-4 my-4 no-gutters">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <div class="form-check form-group">
                    
                    @Html.RadioButtonFor(m => m.RenewalPeriod,"Month") 
                   
                        Month
                  
                    @Html.RadioButtonFor(m => m.RenewalPeriod,"Quaterly") 
                    
                        Quaterly
                   
                    @Html.RadioButtonFor(m => m.RenewalPeriod,"Half Year")
                   
                        Half Year
                    
                    @Html.RadioButtonFor(m => m.RenewalPeriod,"Yearly")
                    
                        Yearly
                   
                    @Html.RadioButtonFor(m => m.RenewalPeriod,"Never")
                 
                        Never
                    
                    <span asp-validation-for="RenewalPeriod" class="text-danger"></span>

                </div>
            </div>
            <div class="col-md-6">
                <input type="submit" value="Create" class="btn btn2" />
            </div>


        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


