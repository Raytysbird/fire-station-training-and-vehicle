@model IEnumerable<fire_station_training_and_vehicle.Models.Event>

@{
    ViewData["Title"] = "Index";
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
                {
                    title: 'Event 1',
                    start: '2023-03-23T10:00:00',
                    end: '2023-03-23T12:00:00'
                },
                {
                    title: 'Event 2',
                    start: '2023-03-24T14:00:00',
                    end: '2023-03-24T16:00:00'
                }
            ]
        });
        calendar.render();
    });
</script>
<style>
    #calendar {
        height: 600px;
    }

    /* Set the font family for the event titles */
    .fc-event-title {
        font-family: Arial, sans-serif;
    }
</style>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="calendar"></div>
        </div>
    </div>
</div>

