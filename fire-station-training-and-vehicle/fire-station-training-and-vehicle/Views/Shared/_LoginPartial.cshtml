@using Microsoft.AspNetCore.Identity
@using fire_station_training_and_vehicle.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class ="nav-item">
            <button class="openbtn" onclick="openNav()">☰</button>

        </li>
        <li class="nav-item">
            <p class="navLink"> Hello @User.Identity?.Name!</p>
        </li>
        <li class="nav-item">
            <a class="navLink" asp-area="Identity" asp-page="/Account/Manage/ChangePassword" title="Manage"><img src="~/images/user.png" width="40" height="40" /></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="navLink btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        
        <li class="nav-item">
            <a class="navLink" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

    }
</ul>
