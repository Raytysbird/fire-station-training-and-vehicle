@model IEnumerable<fire_station_training_and_vehicle.Models.Document>

@{
    ViewData["Title"] = "Your Documents";
}

<h1>Your Documents</h1>



<div class="row ms-5 g-0">
    <div class="col-lg-5">
        @if (Model.Count() != 0)
        {
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RequestType.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RequestType.Name)
                            </td>
                            @if (item.Status == null)
                            {
                                <td>
                                    <p>In Review</p>
                                </td>
                                <td></td>
                            }
                            @if (item.Status == true)
                            {
                                <td>
                                    <p>Approved</p>
                                </td>
                                <td>
                                    <a class="link-primary" asp-action="Download" asp-route-fileName="@item.Name">Download</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a asp-action="Create">New Request</a>
            </p>
        }
        else
        {
            <h6>You have not requested any documents yet, click here to request for one. <a asp-action="Create">Document Request</a></h6>
        }
    </div>
</div>
